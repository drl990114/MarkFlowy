{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist-types/",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/**/*.json", "src/types/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-types",
    ".next",
    "coverage",
    "out",
    "tinykeys",
    ".cache",
    "**/node_modules",
    "**/dist",
    "**/dist-types",
    "**/.next",
    "**/coverage",
    "**/out",
    "**/.cache"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
