{
  "$schema": "./schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "http:default",
    "window:allow-start-dragging",
    "window:allow-set-title",
    "dialog:allow-open",
    "dialog:allow-save",
    "clipboard-manager:allow-write",
    "clipboard-manager:allow-read",
    "os:allow-arch",
    "os:allow-os-type",
    "os:allow-version",
    "os:allow-platform",
    "store:allow-clear",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "updater:default"
  ]
}
