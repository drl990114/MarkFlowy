{
  "name": "markflowy-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "templates/*",
    "core/*",
    "docs"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:editor": "yarn workspace @markflowy/editor dev & yarn workspace @markflowy/playground dev",
    "test": "turbo test",
    "updater": "yarn workspace @markflowy/desktop updater",
    "build": "turbo build",
    "build:desktop": "yarn build && yarn workspace @markflowy/desktop tauri:build",
    "dev:desktop": "yarn workspace @markflowy/desktop tauri:dev",
    "release": "node scripts/release.js",
    "lint": "eslint --fix --ext .tsx ./"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/eslint-plugin": "^7.22.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.5",
    "@halodong/eslint-config-react": "^0.38.24",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.5",
    "@tauri-apps/cli": "2.0.0-alpha.18",
    "@types/rollup-plugin-url": "^3",
    "babel": "^6.23.0",
    "child_process": "^1.0.2",
    "eslint": "8.56.0",
    "fast-glob": "^3.3.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.1.1",
    "rollup": "4.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-url": "^3.0.1",
    "typescript": "^5.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint"
  },
  "lint": {
    "*": "eslint --fix"
  },
  "packageManager": "yarn@4.0.2",
  "dependencies": {
    "turbo": "^1.11.0"
  }
}
