{
  "name": "markflowy-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "templates/*",
    "core/*",
    "docs"
  ],
  "scripts": {
    "dev": "yarn workspace @markflowy/editor dev & yarn workspace @markflowy/desktop dev",
    "build": "yarn workspace @markflowy/theme build && yarn workspace @markflowy/editor build && yarn workspaces foreach run build",
    "test": "yarn workspace @markflowy/editor test && yarn workspace @markflowy/desktop test && cargo test --workspace --exclude line_by_line",
    "build:desktop": "yarn workspace @markflowy/desktop build && yarn workspace @markflowy/desktop tauri:build",
    "dev:desktop": "yarn workspace @markflowy/desktop tauri:dev",
    "release": "node scripts/release.js",
    "lint": "eslint --fix --ext .tsx ./"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/eslint-plugin": "^7.22.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@halodong/eslint-config-react": "^0.38.24",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.5",
    "@tauri-apps/cli": "2.0.0-alpha.16",
    "@types/rollup-plugin-url": "^3",
    "babel": "^6.23.0",
    "child_process": "^1.0.2",
    "eslint": "8.44.0",
    "fast-glob": "^3.3.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.0.2",
    "rollup": "3.29.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-url": "^3.0.1",
    "typescript": "^5.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint"
  },
  "lint": {
    "*": "eslint --fix"
  },
  "pnpm": {
    "overrides": {},
    "peerDependencyRules": {},
    "patchedDependencies": {}
  },
  "packageManager": "yarn@3.6.1"
}
