{
  "name": "linebyline-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @linebyline/editor dev & yarn workspace @linebyline/linebyline dev",
    "build": "yarn workspace @linebyline/editor build && yarn workspaces run build",
    "test": "yarn workspace @linebyline/editor test",
    "tauri:build": "tauri build",
    "tauri:dev": "tauri dev",
    "release": "node scripts/release.js",
    "lint": "eslint --fix --ext .tsx ./"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.7",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@halodong/eslint-config-react": "^0.38.24",
    "@tauri-apps/cli": "^1.4.0",
    "babel": "^6.23.0",
    "child_process": "^1.0.2",
    "eslint": "8.44.0",
    "husky": "^8.0.3",
    "typescript": "^5.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint"
  },
  "lint": {
    "*": "eslint --fix"
  },
  "dependencies": {
    "fast-glob": "^3.3.0",
    "prettier": "^3.0.0"
  }
}
